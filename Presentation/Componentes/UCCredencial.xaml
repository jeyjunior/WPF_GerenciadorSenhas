<UserControl x:Class="Presentation.Componentes.UCCredencial"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Margin="0" Padding="0"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="50" Margin="0,1,10,1" Background="{StaticResource Nenhuma}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="65" MaxWidth="200"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*" MinWidth="150"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*" MinWidth="150"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="100" MinWidth="100"/>
        </Grid.ColumnDefinitions>

        <!-- Coluna 0: Categoria e Data de Modificação -->
        <Border Grid.Column="0" Background="{DynamicResource Cinza11}" Padding="5">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{Binding Categoria}" 
                               TextWrapping="Wrap" 
                               FontSize="11" 
                               Foreground="{StaticResource Branco}" 
                               TextAlignment="Center" 
                               FontWeight="Bold"/>
                <TextBlock Text="{Binding DataModificacao}" 
                               Foreground="{StaticResource Cinza2}" 
                               FontSize="10" 
                               TextAlignment="Center" 
                               HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Coluna 2: Credencial -->
        <Grid Grid.Column="2" Margin="5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="Credencial" 
                               FontSize="11" 
                               Foreground="{StaticResource Cinza1}" 
                               Margin="0,0,0,2"/>
                <TextBlock Text="{Binding Credencial}" 
                               FontSize="11" 
                               Foreground="{StaticResource Branco}" 
                               FontWeight="Bold"/>
            </StackPanel>

            <Button Grid.Column="1" Width="28" Height="28" VerticalAlignment="Center" Background="{StaticResource Nenhuma}" BorderBrush="{StaticResource Nenhuma}" BorderThickness="0">
                <Button.Content>
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8C8;" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource Cinza1}"/>
                </Button.Content>
            </Button>
        </Grid>

        <!-- Separador 2 -->
        <Border Grid.Column="3"  Background="{DynamicResource Cinza7}" Width="1" Height="30"/>

        <!-- Coluna 4: Senha -->
        <Grid Grid.Column="4" Margin="5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="Senha" 
                               FontSize="11" 
                               Foreground="{StaticResource Cinza1}" 
                               Margin="0,0,0,2"/>
                <TextBlock Text="{Binding SenhaVisivel}" 
                               FontSize="11" 
                               Foreground="{StaticResource Branco}" 
                               FontWeight="Bold"/>
            </StackPanel>

            <Button Grid.Column="1" Width="28" Height="28" VerticalAlignment="Center" Background="{StaticResource Nenhuma}" BorderBrush="{StaticResource Nenhuma}" BorderThickness="0">
                <!-- Envolvendo o conteúdo com Border para arredondar os cantos -->
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

                <Button.Content>
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE890;" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource Cinza1}"/>
                </Button.Content>
            </Button>

            <Button Grid.Column="2" Width="28" Height="28" VerticalAlignment="Center" Background="{StaticResource Nenhuma}" BorderBrush="{StaticResource Nenhuma}" BorderThickness="0">
                <Button.Content>
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8C8;" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource Cinza1}"/>
                </Button.Content>
            </Button>
        </Grid>

        <Border Grid.Column="5"  Background="{DynamicResource Cinza7}" Width="1" Height="30"/>

        <StackPanel Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Button Grid.Column="1" Width="32" Height="32" VerticalAlignment="Center" Background="{StaticResource Vermelho4}" BorderBrush="{StaticResource Nenhuma}" BorderThickness="0" Margin="0,0,10,0">
                <!-- Envolvendo o conteúdo com Border para arredondar os cantos -->
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

                <Button.Content>
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE107;" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource Branco}"/>
                </Button.Content>
            </Button>

            <Button Grid.Column="1" Style="{DynamicResource btnPadraoIcones32}" Background="{DynamicResource Laranja}" Margin="2,0,0,0">
                <Button.Content>
                    <TextBlock  Text="&#xE104;" Style="{DynamicResource txbGlyphTemplate}"/>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>