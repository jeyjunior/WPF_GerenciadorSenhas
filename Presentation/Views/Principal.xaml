<Window x:Class="Presentation.Views.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        xmlns:componentes="clr-namespace:Presentation.Componentes"
        mc:Ignorable="d"
        Background="{StaticResource Cinza13}"
        WindowStartupLocation="CenterScreen"
        Title="Principal" Height="768" Width="1366" MinHeight="400" MinWidth="590" 
        Loaded="Window_Loaded">

    <Grid Background="{DynamicResource Cinza13}" Margin="32, 12"> 
        <Grid.RowDefinitions>
            <RowDefinition Height="8"/>
            <RowDefinition Height="42"/>    <!-- Cabeçalho -->
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>     <!-- Conteúdo -->
            <RowDefinition Height="8"/>
            <RowDefinition Height="48"/>    <!-- Rodapé -->
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*" MinWidth="100" MaxWidth="600"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*" MinWidth="50"/>
                <ColumnDefinition Width="42"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="42"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="42"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="42"/>
            </Grid.ColumnDefinitions>

            <ComboBox Grid.Column="0"
                      x:Name="cboTipoDePesquisa"/>
            
            <TextBox Grid.Column="1"
                     x:Name="txtPesquisar"/>

            <Button Grid.Column="2"
                    Content="Pesquisar"
                    x:Name="btnPesquisar"
                    Click="btnPesquisar_Click"/>

            <Button Grid.Column="4"
                    Background="{StaticResource Cinza1}"
                    Content=""
                    x:Name="btnConfig"
                    Click="btnConfig_Click"/>

            <Button Grid.Column="6"
                    Background="{StaticResource Vermelho2}"
                    Content=""
                    x:Name="btnExcluir"
                    Click="btnExcluir_Click"/>

            <Button Grid.Column="8"
                    Background="{StaticResource Laranja}"
                    Content=""
                    x:Name="btnAlterar"
                    Click="btnAlterar_Click"/>

            <Button Grid.Column="10"
                    Background="{StaticResource Verde1}"
                    Content=""
                    x:Name="btnAdicionar"
                    Click="btnAdicionar_Click"/>
        </Grid>

        <ListBox x:Name="listaCredenciais"
                 Grid.Row="3" 
                 BorderBrush="{StaticResource Nenhuma}" 
                 BorderThickness="0" Background="{StaticResource Nenhuma}"
                 ItemsSource="{Binding Credenciais}"
                 VirtualizingPanel.IsVirtualizing="True"
                 VirtualizingPanel.VirtualizationMode="Recycling"
                 HorizontalContentAlignment="Stretch"
                 ItemContainerStyle="{StaticResource ListBoxCredenciaisStyle}">
        </ListBox>
        
        <Label Grid.Row="5" x:Name="lblTotal" Content="" Foreground="{StaticResource Amarelo}"/>
    </Grid>
</Window>

