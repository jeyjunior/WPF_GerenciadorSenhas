<Window x:Class="Presentation.Views.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Background="{StaticResource Cinza13}"
        Title="Principal" Height="768" Width="1366" MinHeight="768" MinWidth="1366" MaxHeight="768" MaxWidth="1366"
        Loaded="Window_Loaded">

    <Grid Background="{DynamicResource Cinza13}" Margin="32, 12"> 
        <Grid.RowDefinitions>
            <RowDefinition Height="8"/>
            <RowDefinition Height="42"/>    <!-- Cabeçalho -->
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>     <!-- Conteúdo -->
            <RowDefinition Height="8"/>
            <RowDefinition Height="48"/>    <!-- Rodapé -->
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*" MinWidth="100" MaxWidth="600"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*" MinWidth="50"/>
                <ColumnDefinition Width="42"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="42"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="42"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="42"/>
            </Grid.ColumnDefinitions>

            <ComboBox Grid.Column="0"
                      x:Name="cboTipoDePesquisa"/>
            
            <TextBox Grid.Column="1"
                     x:Name="txtPesquisar"/>

            <Button Grid.Column="2"
                    Content="Pesquisar"
                    x:Name="btnPesquisar"
                    Click="btnPesquisar_Click"/>

            <Button Grid.Column="4"
                    Background="{StaticResource Cinza1}"
                    Content=""
                    x:Name="btnConfig"
                    Click="btnConfig_Click"/>

            <Button Grid.Column="6"
                    Background="{StaticResource Vermelho2}"
                    Content=""
                    x:Name="btnExcluir"
                    Click="btnExcluir_Click"/>

            <Button Grid.Column="8"
                    Background="{StaticResource Laranja}"
                    Content=""
                    x:Name="btnAlterar"
                    Click="btnAlterar_Click"/>

            <Button Grid.Column="10"
                    Background="{StaticResource Verde1}"
                    Content=""
                    x:Name="btnAdicionar"
                    Click="btnAdicionar_Click"/>
        </Grid>
            
        <DataGrid Grid.Row="3" 
                  Background="{StaticResource Cinza10}"
                  Name="dtgCredencial"
                  AutoGenerateColumns="False"
                  SelectionUnit="FullRow"
                  SelectionMode="Single"
                  CanUserReorderColumns="True"
                  ColumnHeaderHeight="48"
                  CanUserResizeRows="True">
            <DataGrid.Columns>
                <DataGridTextColumn Width="1" Header="PK_GSCredencial" Visibility="Hidden" Binding="{Binding PK_GSCredencial}"/>
                <DataGridTextColumn Width="100" Header="Modificação" Visibility="Visible" Binding="{Binding DataModificacao}"/>
                <DataGridTextColumn Width="*" Header="Categoria" Visibility="Visible" Binding="{Binding Categoria}"/>
                <DataGridTextColumn Width="*" Header="Credencial" Visibility="Visible" Binding="{Binding Credencial}"/>

                <DataGridTemplateColumn Header="" Width="48" MaxWidth="48" MinWidth="48">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                                <Button x:Name="btnCopiarCredencial" Content="Copiar" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTextColumn Width="*" Header="Senha" Visibility="Visible" Binding="{Binding Senha}"/>
                
                <DataGridTemplateColumn Header="" Width="42" MaxWidth="42" MinWidth="42">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="btnExibirSenha" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="&#xE001;"  FontFamily="Segoe UI Symbol" />
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTemplateColumn Header="Copiar" Width="48" MaxWidth="48" MinWidth="48">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="btnCopiarSenha" Content="Copiar" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

