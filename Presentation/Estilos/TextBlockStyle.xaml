<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- TEXTBLOCK PADRAO -->
    <Style x:Key="txbTemplate" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Foreground" Value="{StaticResource Branco}"/>
    </Style>
    
    <!-- TEXTBLOCK 14 -->
    <Style x:Key="txbTemplate14" TargetType="TextBlock" BasedOn="{StaticResource txbTemplate}">
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- TEXTBLOCK GLYPH PADRAO -->
    <Style x:Key="txbGlyphTemplate" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{StaticResource Branco}"/>
    </Style>

    <!-- TEXTBLOCK GLYPH 20 -->
    <Style x:Key="txbGlyphTemplate20Bold" TargetType="TextBlock" BasedOn="{StaticResource txbGlyphTemplate}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    <Style x:Key="txbGlyphTemplate20" TargetType="TextBlock" BasedOn="{StaticResource txbGlyphTemplate}">
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <!-- TEXTBLOCK GLYPH 18 -->
    <Style x:Key="txbGlyphTemplate18" TargetType="TextBlock" BasedOn="{StaticResource txbGlyphTemplate}">
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <!-- TEXTBLOCK GLYPH 16 -->
    <Style x:Key="txbGlyphTemplate16" TargetType="TextBlock" BasedOn="{StaticResource txbGlyphTemplate}">
        <Setter Property="FontSize" Value="16"/>
    </Style>
    
</ResourceDictionary>